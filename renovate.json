{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchFileNames": ["queen/**"],
      "labels": ["queen","dependencies"]
    },
    {
      "matchFileNames": ["queen-v2/**"],
      "labels": ["queen-v2","dependencies"]
    },
    {
      "matchFileNames": ["drama-queen/**"],
      "labels": ["drama-queen","dependencies"]
    },
    {
      "matchFileNames": ["package.json"],
      "labels": ["drama-queen-container","dependencies"]
    }
  ]
}
