{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchFiles": ["queen/**"],
      "labels": ["queen"]
    },
    {
      "matchFiles": ["queen-v2/**"],
      "labels": ["queen-v2"]
    },
    {
      "matchFiles": ["drama-queen/**"],
      "labels": ["drama-queen"]
    },
    {
      "matchFiles": ["package.json"],
      "labels": ["drama-queen-container"]
    }
  ]
}
